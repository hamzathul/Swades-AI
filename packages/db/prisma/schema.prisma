generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Conversation {
  id        String    @id @default(cuid())
  userId    String
  messages  Message[]
  createdAt DateTime  @default(now())
}

model Message {
  id             String   @id @default(cuid())
  conversationId String
  role           String
  content        String
  createdAt      DateTime @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id])
}

model Order {
  id             String  @id @default(cuid())
  userId         String
  status         String
  trackingNumber String?
  total          Float
}

model Invoice {
  id      String  @id @default(cuid())
  orderId String
  amount  Float
  paid    Boolean
}

model Refund {
  id      String @id @default(cuid())
  orderId String
  status  String
}
